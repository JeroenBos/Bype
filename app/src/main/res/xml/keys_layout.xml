<?xml version="1.0" encoding="utf-8"?>
<Keyboard
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:keyWidth="10%"
    app:horizontalGap="3px"
    app:verticalGap="3px"
    app:keyHeight="52dp"
    app:keyTextColor="@color/colorAccent"
    app:keyBackground="@color/colorPrimaryDark"
    >
    <Row>
        <Key app:codes="113" app:keyLabel="q" app:keyEdgeFlags="left"/>
        <Key app:codes="119" app:keyLabel="w"/>
        <Key app:codes="101" app:keyLabel="e"/>
        <Key app:codes="114" app:keyLabel="r"/>
        <Key app:codes="116" app:keyLabel="t"/>
        <Key app:codes="121" app:keyLabel="y"/>
        <Key app:codes="117" app:keyLabel="u"/>
        <Key app:codes="105" app:keyLabel="i"/>
        <Key app:codes="111" app:keyLabel="o"/>
        <Key app:codes="112" app:keyLabel="p" app:keyEdgeFlags="right"/>
    </Row>
    <Row>
        <Margin app:keyWidth="5%" app:horizontalGap="0px"/>
        <Key app:codes="97" app:keyLabel="a" app:keyEdgeFlags="left"/>
        <Key app:codes="115" app:keyLabel="s"/>
        <Key app:codes="100" app:keyLabel="d"/>
        <Key app:codes="102" app:keyLabel="f"/>
        <Key app:codes="103" app:keyLabel="g"/>
        <Key app:codes="104" app:keyLabel="h"/>
        <Key app:codes="106" app:keyLabel="j"/>
        <Key app:codes="107" app:keyLabel="k"/>
        <Key app:codes="108" app:keyLabel="l" app:keyEdgeFlags="right"/>
        <Margin app:keyWidth="5%" app:horizontalGap="0px" />
    </Row>
    <Row>
        <Key app:codes="-1" app:keyLabel="CAPS" app:keyWidth="15%" app:keyEdgeFlags="left"/>
        <Key app:codes="122" app:keyLabel="z"/>
        <Key app:codes="120" app:keyLabel="x"/>
        <Key app:codes="99" app:keyLabel="c"/>
        <Key app:codes="118" app:keyLabel="v"/>
        <Key app:codes="98" app:keyLabel="b"/>
        <Key app:codes="110" app:keyLabel="n"/>
        <Key app:codes="109" app:keyLabel="m"/>
        <Key app:codes="-5" app:keyLabel="DEL" app:keyWidth="20%" app:isRepeatable="true" app:keyEdgeFlags="right" />
    </Row>
    <Row app:rowEdgeFlags="bottom">
        <!--           "-6"=KEYCODE_ALT-->
        <Key app:codes="-6" app:keyLabel="ALT" app:keyWidth="11%"  app:keyEdgeFlags="left"/>
        <Key app:codes="-6" app:keyLabel="\?123" app:keyWidth="13%" />
        <Key app:codes="44" app:keyLabel="," app:keyWidth="10%" />
        <Key app:codes="32" app:keyLabel="SPACE" app:keyWidth="40%" app:isRepeatable="true"/>
        <Key app:codes="46" app:keyLabel="." app:keyWidth="10%" />
        <Key app:codes="-4" app:keyBackground="@color/colorPrimary" app:keyLabel="DONE" app:keyWidth="16%" app:keyEdgeFlags="right"/>
    </Row>
</Keyboard>